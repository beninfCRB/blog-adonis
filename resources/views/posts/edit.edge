@layout.master({ title: "Daftar Post" })
  @slot('meta')
    <meta name="description" content="A welcome page made with EdgeJS" />
  @endslot
  
  @slot('main')
    <h1>
      Edit Post
    </h1>

    <form action="/posts/{{ post.id }}?_method=PUT" method="POST">
      {{ csrfField() }}
      <div>
        <label for="judul">Judul:</label>        <br />
        <input
          type="text"
          id="judul"
          name="judul"
          value="{{ post.judul }}"
          required
          style="width: 100%; padding: 8px; margin-bottom: 10px;"
        />
      </div>
      <div>
        <label for="konten">Konten:</label>        <br />
        <textarea id="konten" name="konten" rows="5" required style="width: 100%; padding: 8px;">{{ post.konten }}</textarea>
      </div>
      <button type="submit" style="margin-top: 10px; padding: 8px
15px;">Update</button>
    </form>
  @endslot
